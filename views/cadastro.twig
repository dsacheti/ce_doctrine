{% extends 'layout.twig' %}
{% block titulo %}Cadastro de produtos{% endblock %}
{% block conteudo %}
    <form id="cadprodutos" action="{{ url('tratacadProduto') }}" method="post" class="form-horizontal">
        <div class="form-group">
            <label class="control-label" for="nome">Nome:</label>
            <input class="form-control" id="nome" name="nome">
        </div>
        <div class="form-group">
            <label class="control-label" for="desc">Descricao:</label>
            <input class="form-control" id="desc" name="desc">
        </div>
        <div class="form-group">
            <label class="control-label" for="preco">Valor:</label>
            <input class="form-control" id="preco" name="preco">
        </div>
        <div class="form-group">
            <input class="btn btn-primary" type="submit" value="Gravar">
            <a class="btn btn-default" href="{{ url('home') }}">Cancelar</a>
        </div>
    </form>
{% endblock %}